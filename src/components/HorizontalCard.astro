    <!-- Image section -->
    <div class="relative w-full md:w-1/2 h-[250px] md:h-[350px] overflow-hidden rounded-t-xl md:rounded-l-xl md:rounded-tr-none">
      <Image
        src={img}
        alt={title}
        width={800}
        height={450}
        class="w-full h-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-[1.025] group-hover:rotate-[-1deg]"
      />
    </div>

   <!-- Text Container ABSOLUTE for md+ / STATIC for mobile -->
   <div class="
   absolute md:absolute bottom-[-5%] left-[48%] w-[52%] h-[100%]
   hidden md:flex items-center rounded-r-xl overflow-hidden
   shadow-xl shadow-black/100 transition-all duration-500 ease-in-out group-hover:-translate-y-2
   z-10
    ">
    
    <!-- Background layers -->
    <div class="absolute w-full h-full top-0 left-0 z-0 backdrop-blur-sm bg-black/30"></div>
