---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";

import BackgroundLayout from "../layouts/BackgroundLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

// Importations...
const projects = await getCollection("project");

// Project selection
const bachelor_project = projects.find(
  (project) => project.data.title === "Bachelor's Project: Fluid Simulation Raytracing Rendering"
);

const ruby_project = projects.find(
  (project) => project.data.title === "Ruby and The Lost Crystals"
);

const pathtracer_project = projects.find(
  (project) => project.data.title === "PathTracer in CUDA"
);

const opengl_project = projects.find(
  (project) => project.data.title === "OpenGL 3D Scene in PBR"
);

const minecraft_project = projects.find(
  (project) => project.data.title === "Minecraft clone in DirectX11"
);

const rollback_project = projects.find(
  (project) => project.data.title === "Penguin battle !"
);

const physics_project = projects.find(
  (project) => project.data.title === "2D Physics Engine"
);

const selectedTitles = [
  "Space Platformer",
  "Penguin Card Master",
];

const games_projects = projects.filter((project) =>
  selectedTitles.includes(project.data.title)
);
